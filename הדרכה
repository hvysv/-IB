<div class="categories">
  <button class="category-btn" onclick="showCategory('video')">וידאו</button>
  <button class="category-btn" onclick="showCategory('pdf')">מדריכים PDF</button>
  <button class="category-btn" onclick="showCategory('tips')">טיפים</button>
</div>

<div class="content" id="content-area">
  <p>בחר קטגוריה כדי להציג הדרכות.</p>
</div>

<script>
  const lessons = {
    video: [
      { title: "הדרכה 1 - התחלה", type: "video", src: "https://www.w3schools.com/html/mov_bbb.mp4" },
      { title: "הדרכה 2 - ממשק משתמש", type: "video", src: "https://interactive-examples.mdn.mozilla.net/media/cc0-videos/flower.mp4" }
    ],
    pdf: [
      { title: "מדריך PDF 1", type: "link", src: "https://example.com/guide1.pdf" },
      { title: "מדריך PDF 2", type: "link", src: "https://example.com/guide2.pdf" }
    ],
    tips: [
      { title: "טיפ 1", type: "text", text: "טיפ חשוב לשימוש במערכת." },
      { title: "טיפ 2", type: "text", text: "טיפ נוסף לשיפור העבודה." }
    ]
  };

  function showCategory(category) {
    const area = document.getElementById('content-area');
    area.innerHTML = '';
    if (!lessons[category] || lessons[category].length === 0) {
      area.innerHTML = '<p>אין תוכן לקטגוריה זו.</p>';
      return;
    }
    lessons[category].forEach(item => {
      const div = document.createElement('div');
      div.className = 'lesson';
      const h3 = document.createElement('h3');
      h3.textContent = item.title;
      div.appendChild(h3);

      if (item.type === 'video') {
        const video = document.createElement('video');
        video.src = item.src;
        video.controls = true;
        div.appendChild(video);
      } else if (item.type === 'link') {
        const a = document.createElement('a');
        a.href = item.src;
        a.textContent = 'פתח מדריך PDF';
        a.target = '_blank';
        div.appendChild(a);
      } else if (item.type === 'text') {
        const p = document.createElement('p');
        p.textContent = item.text;
        div.appendChild(p);
      }

      area.appendChild(div);
    });
  }
</script>

