<script>
function showTab(tabId) {
  document.querySelectorAll('.tab-content').forEach(div => div.classList.remove('active'));
  document.getElementById(tabId).classList.add('active');
  document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
  event.currentTarget.classList.add('active');
}

function toggleDetails(button) {
  const details = button.nextElementSibling;
  details.style.display = details.style.display === 'block' ? 'none' : 'block';
}

function searchTopics(tabId, query) {
  const tab = document.getElementById(tabId);
  const topics = tab.querySelectorAll('.topic');
  query = query.trim().toLowerCase();
  
  topics.forEach(topic => {
    const text = topic.querySelector('button').innerText + " " + topic.querySelector('.details').innerText;
    topic.style.display = text.toLowerCase().includes(query) ? 'block' : 'none';
  });
}
</script>

